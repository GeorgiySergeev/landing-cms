---
// Chinese-specific override for Layout3
import BaseLayout from '../../base/BaseLayout.astro';
import { getLangAndDir } from '../../utils.ts';

const { title = '登陆页面' } = Astro.props;

// Always use Chinese theme for this layout
const theme = 'chinese';
const { lang, dir } = getLangAndDir(theme);
---

<BaseLayout theme={theme} title={title}>
  <div class="chinese-custom-content">
    <div class="text-center mb-8">
      <h2 class="text-2xl font-bold mb-4">中文自定义模板</h2>
      <p class="text-white/90">
        这是一个为中文内容定制的模板，使用了中文特有的设计元素。
      </p>
    </div>
    <div class="bg-white/20 p-6 rounded-lg">
      <slot />
    </div>
  </div>
</BaseLayout>
