---
// German-specific override for Layout3
import BaseLayout from '../../base/BaseLayout.astro';
import { getLangAndDir } from '../../utils.ts';

const { title = 'Landingpage' } = Astro.props;

// Always use German theme for this layout
const theme = 'german';
const { lang, dir } = getLangAndDir(theme);
---

<BaseLayout theme={theme} title={title}>
  <div class="german-custom-content">
    <div class="text-center mb-6">
      <h2 class="text-2xl font-bold mb-3">Deutsche Vorlage</h2>
      <p class="text-white/90">
        Eine speziell angepasste Vorlage für deutschsprachige Inhalte.
      </p>
    </div>
    <div class="bg-white/20 p-6 rounded-lg border-l-4 border-amber-400">
      <slot />
    </div>
    <div class="mt-4 flex items-center justify-center space-x-3">
      <span class="text-sm bg-black/20 px-3 py-1 rounded-full">Qualität</span>
      <span class="text-sm bg-black/20 px-3 py-1 rounded-full">Präzision</span>
      <span class="text-sm bg-black/20 px-3 py-1 rounded-full">Effizienz</span>
    </div>
  </div>
</BaseLayout>
