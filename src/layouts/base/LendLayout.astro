    </style>

    <!-- JavaScript for interactive elements -->
    <script>
      // Scroll to form functionality
      document.addEventListener('DOMContentLoaded', function () {
        const scrollLinks = document.querySelectorAll('[href="#order"]');
        scrollLinks.forEach(link => {
          link.addEventListener('click', function (e) {
            e.preventDefault();
            const orderElement = document.getElementById('order');
            if (orderElement) {
              orderElement.scrollIntoView({
                behavior: 'smooth',
                block: 'start',
              });
            }
          });
        });
      });

      // Doors game functionality
      function initDoorsGame() {
        const doors = document.querySelectorAll('.door');
        const discounts = ['30%', '50%', '20%'];
        let gameCompleted = false;

        doors.forEach((door, index) => {
          door.addEventListener('click', function () {
            if (gameCompleted) return;

            // Show discount
            const salesElement =
              door.parentElement?.querySelector('.door__sales');
            if (salesElement && door.parentElement) {
              salesElement.textContent = discounts[index];
              door.parentElement.classList.add('opened');
              door.classList.add('opened');
            }

            gameCompleted = true;

            // Show order form after delay
            setTimeout(() => {
              const orderElement = document.getElementById('order');
              if (orderElement) {
                orderElement.style.display = 'block';
                orderElement.scrollIntoView({
                  behavior: 'smooth',
                  block: 'start',
                });
              }
            }, 1000);
          });
        });
      }

      // Initialize doors game when DOM is loaded
      document.addEventListener('DOMContentLoaded', initDoorsGame);

      // Force center all images in article content
      document.addEventListener('DOMContentLoaded', function () {
        const articleText = document.querySelector('.article__text');
        if (articleText) {
          // Center all images
          const images = articleText.querySelectorAll('img');
          images.forEach(img => {
            img.style.display = 'block';
            img.style.marginLeft = 'auto';
            img.style.marginRight = 'auto';
            img.style.maxWidth = '100%';
          });

          // Center all picture elements
          const pictures = articleText.querySelectorAll('picture');
          pictures.forEach(picture => {
            picture.style.display = 'block';
            picture.style.textAlign = 'center';
            const img = picture.querySelector('img');
            if (img) {
              img.style.display = 'block';
              img.style.marginLeft = 'auto';
              img.style.marginRight = 'auto';
            }
          });

          // Center all center elements
          const centers = articleText.querySelectorAll('center');
          centers.forEach(center => {
            center.style.display = 'block';
            center.style.textAlign = 'center';
          });
        }
      });
    </script>
  </body>
</html>
