---
export interface Props {
  title?: string;
  description?: string;
  author?: string;
  date?: string;
  language?: string;
}

const {
  title = 'Una joven uróloga ha revelado cómo consigue devolver la potencia a hombres de entre 60 y 70 años.',
  description = '',
  author = '**',
  date = '',
  language = 'es',
} = Astro.props;
---

<!doctype html>
<html lang={language} dir="ltr">
  <head>
    <script
      src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"
      is:inline></script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/src/styles/land/css/index.css" />
    <link rel="stylesheet" href="/src/styles/land/css/header-footer.css" />
    <link rel="stylesheet" href="/src/styles/land/css/doors.css" />

    <!-- Inline CSS from index.css -->

    <!-- Header/Footer CSS -->

    <!-- Doors CSS -->

    <script is:inline>
      function fdateTwoDigits(d) {
        let now = new Date();
        now.setDate(now.getDate() + d);
        let mm = now.getMonth() + 1;
        let day = now.getDate();
        if (now.getDate() < 10) day = '0' + now.getDate();
        if (mm < 10) mm = '0' + mm;
        document.write(day + '.' + mm + '.' + now.getFullYear());
      }
    </script>

    <!--[HEADER]-->
    <meta property="og:type" content="article" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content="" />

    <style>
      /* Центрирование всех изображений в контенте - повышенная специфичность */
      .article .article__text img,
      .article .article__text picture img,
      .article figure img,
      .content-img {
        display: block !important;
        margin: 0 auto !important;
        max-width: 100% !important;
      }

      /* Центрирование picture элементов */
      .article .article__text picture {
        display: block !important;
        text-align: center !important;
      }

      /* Центрирование center элементов (для совместимости) */
      .article .article__text center {
        display: block !important;
        text-align: center !important;
      }

      .article .article__text center picture,
      .article .article__text center img {
        display: block !important;
        margin: 0 auto !important;
      }

      /* Дополнительные стили для inline стилей из MDX */
      .article .article__text img[style*='margin'] {
        margin: 0 auto !important;
      }

      .article .article__text picture[style*='margin'] {
        margin: 0 auto !important;
      }
    </style>
  </head>

