---
import NewsLayout from '../../base/NewsLayout.astro';

export interface Props {
  title: string;
  description?: string;
  publishDate?: string;
  modifiedDate?: string;
  author?: {
    name: string;
    image?: string;
    bio?: string;
    url?: string;
  };
  category?: string;
  tags?: string[];
  image?: {
    src: string;
    alt: string;
    width?: number;
    height?: number;
  };
  expertReview?: {
    name: string;
    credentials: string;
    date: string;
  };
  medicalDisclaimer?: boolean;
  sourcesAndReferences?: Array<{
    title: string;
    url?: string;
  }>;
  relatedConditions?: string[];
  lang?: string;
  dir?: string;
  themeColor?: string;
  showRelatedArticles?: boolean;
  relatedArticles?: any[];
}

const {
  expertReview,
  medicalDisclaimer = true,
  sourcesAndReferences = [],
  relatedConditions = [],
  ...rest
} = Astro.props;
---

<NewsLayout {...rest}>
  <slot />

  {
    expertReview && (
      <div class="expert-review">
        <h3>Expert Reviewed</h3>
        <p>
          This article was reviewed by <strong>{expertReview.name}</strong>,
          {expertReview.credentials} on {expertReview.date}.
        </p>
      </div>
    )
  }

  {
    medicalDisclaimer && (
      <div class="medical-disclaimer">
        <h3>Medical Disclaimer</h3>
        <p>
          This content is for informational and educational purposes only. It is not intended to
          provide medical advice or to take the place of such advice or treatment from a personal
          physician. All readers of this content are advised to consult their doctors or qualified
          health professionals regarding specific health questions. Neither the publisher nor the
          writer takes responsibility for possible health consequences of any person reading or
          following the information in this article.
        </p>
      </div>
    )
  }

  {
    sourcesAndReferences.length > 0 && (
      <div class="sources-references">
        <h3>Sources & References</h3>
        <ol>
          {sourcesAndReferences.map((source) => (
            <li>
              {source.url ? (
                <a href={source.url} target="_blank" rel="noopener noreferrer">
                  {source.title}
                </a>
              ) : (
                source.title
              )}
            </li>
          ))}
        </ol>
      </div>
    )
  }

  {
    relatedConditions.length > 0 && (
      <div class="related-conditions">
        <h3>Related Conditions</h3>
        <ul class="tags">
          {relatedConditions.map((condition) => (
            <li>
              <a href={`/conditions/${condition.toLowerCase().replace(/\s+/g, '-')}`}>
                {condition}
              </a>
            </li>
          ))}
        </ul>
      </div>
    )
  }
</NewsLayout>

<style>
  .expert-review,
  .medical-disclaimer,
  .sources-references,
  .related-conditions {
    margin-top: 2.5rem;
    padding: 1.5rem;
    border-radius: 0.5rem;
    background-color: var(--color-bg-secondary, #f8f9fa);
  }

  .expert-review h3,
  .medical-disclaimer h3,
  .sources-references h3,
  .related-conditions h3 {
    font-size: 1.25rem;
    margin-top: 0;
    margin-bottom: 0.75rem;
    color: var(--color-primary, #0066cc);
  }

  .medical-disclaimer {
    border-left: 4px solid var(--color-warning, #f0ad4e);
    font-size: 0.875rem;
    line-height: 1.6;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
  }

  .tags li a {
    display: inline-block;
    padding: 0.35rem 0.75rem;
    background-color: var(--color-tag-bg, #e9ecef);
    color: var(--color-tag-text, #495057);
    border-radius: 2rem;
    text-decoration: none;
    font-size: 0.875rem;
    transition:
      background-color 0.2s,
      color 0.2s;
  }

  .tags li a:hover {
    background-color: var(--color-primary, #0066cc);
    color: white;
  }

  /* Mobile-first responsive design */
  @media (min-width: 768px) {
    .expert-review,
    .medical-disclaimer,
    .sources-references,
    .related-conditions {
      padding: 2rem;
    }
  }
</style>
