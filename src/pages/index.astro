---
import '../styles/global.css';
import { landings } from '../landings.ts';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Landing Pages System</title>
  </head>
  <body class="bg-gray-50 min-h-screen">
    <header class="bg-blue-600 text-white p-6">
      <div class="container mx-auto">
        <h1 class="text-3xl font-bold">Isolated Landing Pages System</h1>
        <p class="mt-2">A system for generating optimized and isolated landing pages</p>
      </div>
    </header>
    <main>
      <section class="bg-white rounded-lg shadow p-6 mb-8">
        <div class="container mx-auto">
          <h2 class="text-2xl font-bold mb-4">Available Landing Pages</h2>
          <p class="mb-4">These are the landing pages configured in the system:</p>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {
              landings.map((landing) => (
                <div class="border rounded-lg p-4 hover:bg-blue-50 transition-colors">
                  <h3 class="font-bold">
                    {landing.country.toUpperCase()}/{landing.language}/{landing.article}/
                    {landing.variant}
                  </h3>
                  <p class="text-sm text-gray-600 mb-2">Layout: {landing.layout}</p>
                  <a
                    href={`/landing/${landing.layout}/${landing.country}/${landing.language}/${landing.article}/${landing.variant}/`}
                    class="text-green-600 hover:underline">
                    View Landing Page
                  </a>
                </div>
              ))
            }
          </div>
        </div>
      </section>
      <section class="bg-white rounded-lg shadow p-6">
        <div class="container mx-auto">
          <h2 class="text-2xl font-bold mb-4">Build Isolated Pages</h2>
          <p>Run the following command to build all landing pages as isolated packages:</p>
          <pre
            class="bg-gray-800 text-white p-4 rounded-lg mt-2 overflow-x-auto">npm run build:isolated</pre>

          <p class="mt-4">
            The isolated packages will be available in the <code>dist-isolated</code> directory.
          </p>
        </div>
      </section>
    </main>

    <footer class="bg-gray-800 text-white p-6 mt-8">
      <div class="container mx-auto">
        <p>&copy; 2025 Landing Pages System</p>
      </div>
    </footer>
  </body>
</html>
